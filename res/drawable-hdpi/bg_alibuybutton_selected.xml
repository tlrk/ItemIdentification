<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <item
        android:bottom="1px"
        android:left="1px"
        android:right="1px"
        android:textSize="25px"
        android:top="1px"><shape >

            <gradient
                android:angle="90"
                android:centerX="0.5"
                android:centerY="0.5"
                android:endColor="#FED6FF9E"
                android:startColor="#EC76FF00"
                android:type="linear" />

            <corners
                android:bottomLeftRadius="5dip"
                android:bottomRightRadius="5dip"
                android:topLeftRadius="5dip"
                android:topRightRadius="5dip" />

            <padding
                android:bottom="15dp"
                android:left="20dp"
                android:right="20dp"
                android:top="15dp" />
        </shape></item>

</layer-list>