<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:background="@drawable/background" >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="80px"
        android:shadowDx="10"
        android:shadowDy="20"
        android:text="物品识别"
        android:textColor="@color/green"
        android:textSize="100px"
        android:typeface="serif" />

    <ImageView
        android:id="@+id/thumbnail"
        android:layout_width="fill_parent"
        android:layout_height="300px"
        android:layout_gravity="center"
        android:adjustViewBounds="true"
        android:src="@drawable/home" 
        android:layout_marginTop="40px"
        />

    <TextView
        android:id="@+id/res_view"
        android:text=""
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="100px"
        android:textColor="@color/red"
        android:textSize="70px" 
        android:height="500px"
        android:layout_marginTop="50px"
        android:layout_marginLeft="15dip"
        android:layout_marginRight="15dip"
        android:background="@drawable/textbackground"
        android:paddingTop="10dip"
        android:paddingBottom="10dip"
        />
    <LinearLayout   
        android:layout_width="fill_parent"   
        android:layout_height="wrap_content"    
        android:orientation="vertical">
        <Button 
            android:id = "@+id/SIFTBtn"
            android:layout_width = "fill_parent"
            android:layout_height = "wrap_content"
            android:text = "精确识别 "
            android:textSize="50px"
            android:textColor="@color/BntTextColor"
            android:layout_marginBottom="50px"
            android:layout_marginLeft = "80px"
            android:layout_marginRight = "80px" 
            android:drawableLeft="@drawable/accurate"
            android:background="@drawable/bg_alibuybutton"
            android:onClick="onClickSIFTBtn"
            />
        <Button 
            android:id = "@+id/SVMBtn"
            android:layout_width = "fill_parent"
            android:layout_height = "wrap_content"
            android:layout_marginLeft = "80px"
            android:layout_marginRight = "80px"
            android:text = "快速识别 "
            android:textSize="50px"
            android:textColor="@color/BntTextColor"
            android:drawableLeft="@drawable/speed"
            android:background="@drawable/bg_alibuybutton"
            android:onClick="onClickSVMBtn"
            />"
    </LinearLayout>

</LinearLayout>